FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      createBafflesDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Only relevant if your face selection type can pick up a boundary
internalFacesOnly true;  // Ensures only internal faces are selected

// NOTE: Options for transform are:
// {none, unspecified, rotational, translational}

baffles  // Define baffles to be created
{
    baffleAMI_AGroup  // Name of the baffle
    {
        type        faceZone;      // Select faces & orientation
        zoneName    baffleAMI_AFaces;  // Face zone name as defined in snappyHexMesh

        patches
        {
            master  // Master patch
            {
                name            baffleAMI_A;
                type            cyclicAMI;
                matchTolerance  0.0001;
                transform       rotational;  // See top of file
                rotationAxis    (0 0 1);
                rotationCentre  (0 0 0);
                neighbourPatch  baffleAMI_A_slave;
            }

            slave  // Slave patch
            {
                name            baffleAMI_A_slave;
                type            cyclicAMI;
                matchTolerance  0.0001;
                transform       rotational;  // See top of file
                rotationAxis    (0 0 1);
                rotationCentre  (0 0 0);
                neighbourPatch  baffleAMI_A;
            }
        }
    }

    baffleAMI_BGroup  // Name of the baffle
    {
        type        faceZone;      // Select faces & orientation
        zoneName    baffleAMI_BFaces;  // Face zone name as defined in snappyHexMesh

        patches
        {
            master  // Master patch
            {
                name            baffleAMI_B;
                type            cyclicAMI;
                matchTolerance  0.0001;
                transform       rotational;  // See top of file
                rotationAxis    (0 0 1);
                rotationCentre  (0 0 0);
                neighbourPatch  baffleAMI_B_slave;
            }

            slave  // Slave patch
            {
                name            baffleAMI_B_slave;
                type            cyclicAMI;
                matchTolerance  0.0001;
                transform       rotational;  // See top of file
                rotationAxis    (0 0 1);
                rotationCentre  (0 0 0);
                neighbourPatch  baffleAMI_B;
            }
        }
    }
}

