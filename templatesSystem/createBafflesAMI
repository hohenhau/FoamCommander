FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      createBafflesDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Only relevant if your face selection type can pick up a boundary
internalFacesOnly true;  // Ensures only internal faces are selected

// NOTE: Options for transform are:
// {noOrdering, coincidentFullMatch, rotational, translational}

baffles  // Define baffles to be created
{
    cyclicAMI_ABoth  // Name of the baffle
    {
        type        faceZone;      // Select faces & orientation
        zoneName    baffleAMI_AFaces;  // Face zone name as defined in snappyHexMesh

        patches
        {
            master  // Master patch
            {
                name            cyclicAMI_A;
                type            cyclicAMI;
                matchTolerance  0.0001;
                transform       noOrdering;  // See top of file
                neighbourPatch  cyclicAMI_A_slave;
            }
    
            slave  // Slave patch
            {
                name            cyclicAMI_A_slave;
                type            cyclicAMI;
                matchTolerance  0.0001;
                transform       noOrdering;  // See top of file
                neighbourPatch  cyclicAMI_A;
            }
        }
    }

    cyclicAMI_BBoth  // Name of the baffle
    {
        type        faceZone;      // Select faces & orientation
        zoneName    baffleAMI_BFaces;  // Face zone name as defined in snappyHexMesh

        patches
        {
            master  // Master patch
            {
                name            cyclicAMI_B;
                type            cyclicAMI;
                matchTolerance  0.0001;
                transform       noOrdering;  // See top of file
                neighbourPatch  cyclicAMI_B_slave;
            }

            slave  // Slave patch
            {
                name            cyclicAMI_B_slave;
                type            cyclicAMI;
                matchTolerance  0.0001;
                transform       noOrdering;  // See top of file
                neighbourPatch  cyclicAMI_B;
            }
        }
    }
}

