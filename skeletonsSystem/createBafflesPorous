FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      createBafflesDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Wire Screen Parameters
D 21800000;  // Darcy coefficient
I 657;       // Inertial coefficient
L 0.03;      // Linear scaling of pressure drop

// Only relevant if your face selection type can pick up a boundary
internalFacesOnly true;  // Ensures only internal faces are selected

baffles  // Define baffles to be created
{
    porousBaffle  // Name of the baffle
    {
        type        faceZone;      // Select faces & orientation
        zoneName    porousBaffleFaces;  // Face zone name as defined in snappyHexMesh

        patches
        {
            master  // Master patch
            {
                name            porous_halfA0;
                type            cyclic;
                neighbourPatch  porous_halfA1;
                transform       none;  // No rotational transformation
                patchFields  // Optional override of patch fields
                {
                    p
                    {
                        type            porousBafflePressure;
                        patchType       cyclic;
                        D               $D;  // Darcy coefficient
                        I               $I;  // Inertial coefficient
                        length          $L;  // Scaling of pressure drop
                        uniformJump     false;
                        value           uniform 0;
                    }
                }
            }

            slave  // Slave patch
            {
                name            porous_halfA1;
                type            cyclic;
                neighbourPatch  porous_halfA0;
                transform       none;
                patchFields  // Explicitly define patch fields
                {
                    p
                    {
                        type            porousBafflePressure;
                        patchType       cyclic;
                        D               $D;  // Darcy coefficient
                        I               $I;  // Inertial coefficient
                        length          $L;  // Scaling of pressure drop
                        uniformJump     false;
                        value           uniform 0;
                    }
                }
            }
        }
    }
}

